      transition: all .5s ease-in;
      backdrop-filter: contrast(0.5);
      width: 100%;
      height: 100vh;
    }

    .showfill .accordion-flush {
      width: 50%;
      height: 93%;
      background: white;
      position: relative;
      z-index: -1;
