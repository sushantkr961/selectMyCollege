      <script>
  window.addEventListener('resize', function () {
          const mf = document.getElementById('mobileFillter');
          const f = document.getElementById('fil');
          const sw = window.innerWidth;
          if (sw < 768) {
            f.classList.add('hidefill');

            mf.addEventListener('click', function () {
              f.classList.add('showfill');
              f.classList.remove('hidefill');
            });

          }    else {
            f.classList.remove('showfill')
            f.classList.remove('hidefill')
          }
            let cf = document.getElementById('closefill');
            cf.addEventListener('click', function () {
              f.classList.remove('showfill');
              f.classList.add('hidefill');
            });
        });
      


      </script>

