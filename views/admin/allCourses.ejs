<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel text-capitalize">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if(message){ %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!--  -->
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">All Courses</h4>
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <table id="order-listing" class="table">
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Course Name</th>
                    <th>Sub-Course Name</th>
                    <th>Duration</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% let count = 1; %> <% courses.forEach(function(course) {
                  if(course.subCourses.length > 0){
                  course.subCourses.forEach(function(subCourse) { %>
                  <tr>
                    <td><%= count++ %></td>
                    <td><%= course.name %></td>
                    <td><%= subCourse.name %></td>
                    <td><%= subCourse.duration %></td>
                    <td>
                      <a
                        href="/admin/courses/<%= subCourse._id %>"
                        class="btn btn-outline-primary"
                        ><i class="fa-solid fa-pen-to-square"></i
                      ></a>
                    </td>
                  </tr>
                  <% }); } else { %>
                  <tr>
                    <td><%= count++ %></td>
                    <td><%= course.name %></td>
                    <td>No Sub-Courses</td>
                    <td><%= course.duration %></td>
                    <td>
                      <a
                        href="/admin/courses/<%= course._id %>"
                        class="btn btn-outline-primary"
                        ><i class="fa-solid fa-pen-to-square"></i
                      ></a>
                    </td>
                  </tr>
                  <% } }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
