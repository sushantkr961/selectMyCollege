<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel text-capitalize">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="row grid-margin">
      <!--  -->
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3 py-2">Update Course</h4>
            <form
              action="/admin/courses/<%= course._id %>?_method=PUT"
              method="POST"
              class="cmxform"
            >
              <fieldset>
                <div class="form-group">
                  <label for="cname">Course Name</label>
                  <input
                    id="cname"
                    class="form-control"
                    name="name"
                    type="text"
                    value="<%= course.name  %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cdesignation">Course Duration</label>
                  <input
                    id="cdesignation"
                    class="form-control"
                    name="duration"
                    type="text"
                    value="<%= course.duration  %>"
                    required
                  />
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
