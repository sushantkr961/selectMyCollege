<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel text-capitalize">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="row grid-margin">
      <!--  -->
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3 py-2">
              <%= college.name %> (<%= college.shortName %>)
            </h4>
            <h4 class="card-title fs-4">College Testimonial</h4>
            <form
              action="/addColleges/next/testimonial/edit/<%= testimonial._id %>/<%= college._id %>"
              method="POST"
              class="cmxform"
            >
              <fieldset>
                <div class="form-group">
                  <label for="cname">Full Name</label>
                  <input
                    id="cname"
                    class="form-control"
                    name="name"
                    type="text"
                    value="<%= testimonial.name  %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cdesignation">Designation</label>
                  <input
                    id="cdesignation"
                    class="form-control"
                    name="designation"
                    type="text"
                    value="<%= testimonial.designation  %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cmessage">message</label>
                  <textarea
                    id="cmessage"
                    class="form-control"
                    name="message"
                    required
                  >
<%= testimonial.message  %>
                  </textarea>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
