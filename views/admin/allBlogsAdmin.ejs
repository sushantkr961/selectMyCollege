<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel text-capitalize">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if(message){ %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!--  -->
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">All colleges</h4>
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <table id="order-listing" class="table">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Author Name</th>
                    <th>Blog Title</th>
                    <th>Blog Content</th>
                    <th>Blog Description</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% blogs.forEach(function(blog, index) { %>
                  <tr>
                    <td>
                      <img
                        src="<%=process.env.APP_URL%><%= blog.image %>"
                        alt="logo"
                        class="img-thumbnail p-0"
                      />
                    </td>
                    <td><%= blog.author %></td>
                    <td><%= blog.title %></td>
                    <td><%= blog.content %></td>
                    <td><%= blog.description %></td>
                    <td>
                      <a
                        href="/admin/addColleges/next/blog/<%= blog._id %>"
                        class="btn btn-outline-primary"
                        ><i class="fa-solid fa-pen-to-square"></i
                      ></a>
                      <form
                        class="delete-form"
                        action="/admin/addColleges/next/blog/<%= blog._id %>?_method=DELETE"
                        method="POST"
                      >
                        <button
                          class="btn btn-outline-danger"
                          type="submit"
                          onclick="return confirm('Are you sure you want to delete this blog?')"
                        >
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
