<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row grid-margin">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <!-- <img src="/<%= college.clgLogo %>" width="100" class="img-thumbnail" > -->
            <h4 class="card-title fs-3">Update College</h4>
            <form
              class="cmxform"
              method="POST"
              action="/updateCollege/<%= college._id %>"
              enctype="multipart/form-data"
            >
              <fieldset>
                <div class="form-group">
                  <label for="cname">Name of the College</label>
                  <input
                    id="cname"
                    class="form-control"
                    name="name"
                    minlength="2"
                    type="text"
                    value="<%= college.name %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="caddress">Address</label>
                  <input
                    id="caddress"
                    class="form-control"
                    type="text"
                    name="address"
                    value="<%= college.address %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="ccity">City</label>
                  <input
                    id="ccity"
                    class="form-control"
                    type="text"
                    name="city"
                    value="<%= college.city %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cstate">State</label>
                  <input
                    id="cstate"
                    class="form-control"
                    type="text"
                    name="state"
                    value="<%= college.state %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cpin">Pin Code</label>
                  <input
                    id="cpin"
                    class="form-control"
                    type="number"
                    name="pinCode"
                    value="<%= college.pinCode %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cfacility">Facilites</label>
                  <input
                    id="cfacility"
                    class="form-control"
                    type="text"
                    name="facility"
                    value="<%= college.facilites %>"
                  />
                </div>
                <div class="form-group">
                  <label for="clogo">Logo</label>
                  <input
                    id="clogo"
                    class="form-control"
                    type="file"
                    name="clgLogo"
                  />
                </div>
                <div class="form-group">
                  <img src="/<%= college.clgLogo %>" width="100" />
                  <input
                    id="clogo"
                    class="form-control"
                    type="hidden"
                    name="old_clgLogo"
                    value="<%= college.clgLogo %>"
                  />
                </div>
                <div class="form-group">
                  <label for="curl">College URL (optional)</label>
                  <input
                    id="curl"
                    class="form-control"
                    type="url"
                    name="url"
                    value="<%= college.url %>"
                  />
                </div>
                <div class="form-group">
                  <label for="ccomment">Description (required)</label>
                  <textarea
                    id="ccomment"
                    class="form-control"
                    name="comment"
                    value="<%= college.description %>"
                  ></textarea>
                </div>
                <input class="btn btn-primary" type="submit" value="Update" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./footer.ejs') %>
