<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row grid-margin">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3">Edit College Course</h4>
            <h4 class="card-title">
              <%= college.name %> (<%= college.shortName %>)
            </h4>
            <form
              class="cmxform"
              method="post"
            >
              <fieldset>
                <div class="form-group">
                  <label for="selectedCourse">Selected Course</label>
                  <input
                    id="selectedCourse"
                    class="form-control"
                    type="text"
                    value="<%= course.name  %>"
                    disabled
                  />
                </div>
                <!--  -->
                <div id="feebox">
                  <% var lyo = 0; fee.fees.forEach((semester, index) => { %>
                  <div id="y_<%= index %>" class="row">
                    <div class="col-md-5">
                      <div class="form-group row m-0">
                        <label class="col-form-label py-0">Add Semester</label>
                        <input
                          type="text"
                          class="form-control"
                          name="fee[<%= index %>][0]"
                          value="<%= semester[0] %>"
                        />
                      </div>
                    </div>
                    <div class="col-md-5">
                      <div class="form-group row">
                        <label class="col-form-label py-0"
                          >Add Fee / semester</label
                        >
                        <input
                          type="number"
                          class="form-control"
                          name="fee[<%= index %>][1]"
                          value="<%= semester[1] %>"
                        />
                      </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center">
                      <% if(index == 0){%>
                      <button
                        class="btn btn-primary"
                        type="button"
                        onclick="feefun()"
                      >
                        Add +
                      </button>
                      <% }else{%>
                      <button
                        class="btn btn-primary"
                        type="button"
                        onclick="feefun('<%= index %>')"
                      >
                        Minus -
                      </button>
                      <% }%>
                    </div>
                  </div>
                  <% lyo++;}); %>
                </div>
                <!--  -->
                <input class="btn btn-primary" type="submit" value="Submit" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('./footer.ejs') %>
  <script>
    var yo = <%= lyo %>;
    function feefun(id = 0) {
      if (id == 0) {
        $("#feebox").append(
          `<div class="row" id="y_` +
            yo +
            `">
                  <div class="col-md-5">
                    <div class="form-group row m-0">
                      <label class="col-form-label py-0"
                        >Add Semester</label>
                        <input type="text" class="form-control" name="fee[` +
            yo +
            `][]" />
                    </div>
                  </div>
                  <div class="col-md-5">
                    <div class="form-group row">
                      <label class="col-form-label py-0">Add Fee / semester</label>
                        <input type="text" class="form-control" name="fee[` +
            yo +
            `][]" />
                    </div>
                  </div>
                  <div class="col-md-2 d-flex align-items-center">
                    <button class="btn btn-primary" type="button" onclick="feefun('` +
            yo +
            `')">Minus -</button>
                  </div>
                </div>`
        );
        yo++;
      } else {
        $("#y_" + id).remove();
      }
    }
    function coursea(v) {
      var val = $(v).val();
      if (val == "Other") {
        $("#addCourse").removeAttr("disabled");
        $("#courseDuration").removeAttr("disabled");
      } else {
        $("#addCourse").prop("disabled", true);
        $("#courseDuration").prop("disabled", true);
      }
    }
  </script>
</div>
