<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="<%= process.env.APP_URL %>css/style.css" />
    <link
      rel="shortcut icon"
      href="<%= process.env.APP_URL %>images/favicon.png"
    />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
          <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                  <img
                    src="<%= process.env.APP_URL %>images/logo_2x.png"
                    alt="logo"
                  />
                </div>
                <h3 class="text-center fs-3">Add New Admin</h3>
                <% if (message) { %>
                  <div
                    class="alert alert-dismissible fade show alert-<%= message.type %>"
                    role="alert"
                  >
                    <button
                      class="btn-close"
                      type="button"
                      data-bs-dismiss="alert"
                      aria-label="close"
                    ></button>
                    <strong><%= message.message %></strong>
                  </div>
                  <% } %>
                <form class="pt-3" action="/admin/register" method="POST">
                  <div class="form-group">
                    <input
                      type="text"
                      id="username"
                      name="username"
                      class="form-control form-control-lg"
                      placeholder="Add Username"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="form-control form-control-lg"
                      placeholder="Add Password"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="checkbox"
                      id="checkbox"
                      name="adminRole"
                      class="form-check-input"
                    />
                    <label class="form-check-label" for="checkbox"></label>
                      Register as Admin</label
                    >
                  </div>
                  <div class="mt-3">
                    <button
                      type="submit"
                      class="btn btn-primary w-100 rounded-0 fs-5"
                    >
                      Create
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
