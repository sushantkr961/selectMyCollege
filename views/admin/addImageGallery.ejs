<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel text-capitalize">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="row grid-margin">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3 py-2">
              <%= college.name %> (<%= college.shortName %>)
            </h4>
            <h4 class="card-title fs-4">Image Gallery Form</h4>
            <form
              action="/addColleges/next/gallery?collegeId=<%= college._id %>"
              method="POST"
              enctype="multipart/form-data"
              class="cmxform"
            >
              <div class="form-group">
                <label for="cimage">Upload Images</label>
                <input
                  id="cimage"
                  class="form-control"
                  name="clgLogo"
                  type="file"
                  multiple
                  required
                />
              </div>
              <div class="form-group">
                <input
                id="cbanner"
                name="banners"
                type="checkbox"
                value="true"
                />
                <label for="cbanner" class="fw-bold">Mark as Banner</label>
              </div>
              <input class="btn btn-primary" type="submit" value="Upload" />
              <a href="/addColleges/next/alumni?collegeId=<%= college._id %>"
                ><button class="btn btn-primary" type="button">Next</button></a
              >
            </form>
            <hr />
            <h3>Uploaded Images:</h3>
            <div class="row">
              <% galleryImages.forEach((image) => { %>
              <div class="col-md-3">
                <div class="card">
                  <img
                    src="<%= process.env.APP_URL %><%= image.image %>"
                    class="card-img-top"
                    alt="Uploaded Image"
                    width="100"
                    height="100"
                  />
                  <div class="card-body">
                    <form
                      id="deleteForm-<%= image._id %>"
                      action="/addColleges/next/gallery/<%= college._id %>/images/<%= image._id %>?_method=DELETE"
                      method="POST"
                    >
                      <input type="hidden" name="_method" value="DELETE" />
                      <button
                        type="submit"
                        class="btn btn-danger delete-btn position-absolute p-1 top-0 end-0 rounded-circle"
                        onclick="return confirm('Are you sure you want to delete this image?');"
                      >
                        <i
                          class="fa-solid fa-xmark fs-5"
                          style="color: white"
                        ></i>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
