<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="row grid-margin">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3 py-2">
              <%= college.name %> (<%= college.shortName %>)
            </h4>
            <h4 class="card-title fs-4">Image Gallery Form</h4>
            <form
              action="/addColleges/next/gallery?collegeId=<%= college._id %>"
              method="POST"
              enctype="multipart/form-data"
              class="cmxform"
            >
              <div class="row">
                <div class="form-group col-md-10">
                  <label for="cimage">Upload Images</label>
                  <input
                    id="cimage"
                    class="form-control"
                    name="clgLogo"
                    type="file"
                    multiple
                  />
                </div>
                <div class="col-md-2 d-flex align-items-center">
                  <button class="btn btn-primary" type="submit">Upload</button>
                </div>
              </div>
            </form>
            <hr />
            <h3>Uploaded Images:</h3>
            <div class="image-gallery">
              <% galleryImages.forEach((image) => { %>
              <div class="image-container position-relative">
                <form
                  id="deleteForm-<%= image._id %>"
                  action="/addColleges/next/gallery/<%= college._id %>/images/<%= image._id %>?_method=DELETE"
                  method="POST"
                >
                  <input type="hidden" name="_method" value="DELETE" />
                  <button
                    type="submit"
                    class="btn btn-danger delete-btn position-absolute top-0 end-0"
                    onclick="submitDeleteForm('deleteForm-<%= image._id %>')"
                  >
                    <i class="fa-solid fa-xmark"></i>
                  </button>
                </form>
                <img
                  src="<%= process.env.APP_URL %><%= image.image %>"
                  alt="Uploaded Image"
                  width="100"
                  height="100"
                />
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
