<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if(message){ %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="row grid-margin">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title fs-3">Add New College</h4>
            <form
              class="cmxform"
              method="post"
              action="/addColleges"
              enctype="multipart/form-data"
            >
              <fieldset>
                <div class="form-group">
                  <label for="cname">Name of the College</label>
                  <input
                    id="cname"
                    class="form-control"
                    name="name"
                    minlength="2"
                    type="text"
                    autocomplete="off"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="cname">Short Name of College</label>
                  <input
                    id="cname"
                    class="form-control"
                    name="shortName"
                    minlength="2"
                    autocomplete="off"
                    type="text"
                  />
                </div>
                <div class="form-group">
                  <label for="caddress">Address</label>
                  <input
                    id="caddress"
                    class="form-control"
                    type="text"
                    name="address"
                    autocomplete="off"
                    required
                  />
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label for="cityInput">City</label>
                    <input
                      list="cities"
                      name="city"
                      id="cityInput"
                      class="form-control"
                      autocomplete="off"
                      required
                    />
                    <datalist id="cities">
                      <% cities.forEach(city => { %>
                      <option value="<%= city.cityName %>"><% }); %></option>
                    </datalist>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="stateInput">State</label>
                    <input
                      list="states"
                      name="state"
                      id="stateInput"
                      class="form-control"
                      autocomplete="off"
                      required
                    />
                    <datalist id="states">
                      <% states.forEach(state => { %>
                      <option value="<%= state.stateName %>"><% }); %></option>
                    </datalist>
                  </div>
                </div>

                <div class="form-group">
                  <label for="cpin">Pin Code</label>
                  <input
                    id="cpin"
                    class="form-control"
                    type="number"
                    name="pinCode"
                    autocomplete="off"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="clogo">Logo</label>
                  <input
                    id="clogo"
                    class="form-control"
                    type="file"
                    name="clgLogo"
                  />
                </div>
                <input class="btn btn-primary" type="submit" value="Next" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./footer.ejs') %>
