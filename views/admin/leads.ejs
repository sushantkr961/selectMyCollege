<%- include('./header.ejs') %>

<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <!-- notification message -->
    <% if (message) { %>
    <div
      class="alert alert-dismissible fade show alert-<%= message.type %>"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <!-- notification message -->
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Data table</h4>
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <table id="order-listing" class="table">
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    <th>Course</th>
                  </tr>
                </thead>
                <tbody>
                  <% leads.forEach((lead, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= lead.name %></td>
                    <td><%= lead.email %></td>
                    <td><%= lead.phoneNo %></td>
                    <td><%= lead.course %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('./footer.ejs') %>
</div>
