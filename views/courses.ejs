  <%- include('foot') %>
    <script>
      function fetchd(pra = '') {
        console.log("http://localhost:8080/fc?" + pra);
        $.ajax({
          "url": "http://localhost:8080/fc?" + pra,
        }).done(function (response) {
          $('#fcd').html(response);
        });
      }
      window.onload = function () {
        fetchd();
      }

      function fil() {
        var course = [];
        var city = [];

        // Collect the selected values for course and city
        $("input[name='course']:checked").each(function () {
          course.push($(this).val());
        });
        $("input[name='city']:checked").each(function () {
          city.push($(this).val());
        });

        var query = '';
        if (city.length > 0) {
          query += "city=" + city.join(',') + '&';
        }
        if (course.length > 0) {
          query += "course=" + course.join(',') + '&';
        }

        // Remove the trailing '&' if it exists
        if (query.endsWith('&')) {
          query = query.slice(0, -1);
        }
        fetchd(query);
      }

    </script>