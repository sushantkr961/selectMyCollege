      <form class="col-md-3">
        <div class="sticky-top">


          <div class="accordion accordion-flush " id="accordionExample">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseOne" aria-expanded="true" aria-controls="flush-collapseOne">
                  City
                </button>
              </h2>
              <div id="flush-collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                <div class="accordion-body p-0">
                  <div class="processor">
                    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."
                      title="Type in a name">
                    <ul id="myUL" class="px-3">
                      <% cities.forEach(city=> { %>
                        <li>
                          <label><input class="form-check-input" type="checkbox" name="city">
                            <%= city.cityName %>
                          </label>
                        </li>
                        <% }); %>
                    </ul>

                  </div>
                </div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                  State
                </button>
              </h2>
              <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body p-0">
                  <div class="processor">

                    <input type="text" id="state" onkeyup="myFunction1()" placeholder="Search for names.."
                      title="Type in a name">
                    <ul id="std" class="myUL px-3">
                      <% states.forEach(state=> { %>
                        <li>
                          <input class="form-check-input" type="checkbox" name="state" value="<%= state.stateName %>">
                          <label class="form-check-label" for="flexCheckDefault">
                            <%= state.stateName %>
                          </label>
                        </li>
                        <% }); %>
                    </ul>

                  </div>
                </div>
              </div>
            </div>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                  Course
                </button>
              </h2>
              <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body p-0">
                  <div class="processor">
                    <input type="text" id="course" onkeyup="myFunction2()" placeholder="Search for names.."
                      title="Type in a name">
                    <ul id="crd" class="myUL px-3">
                      <% courses.forEach(course=> { %>
                        <li>
                          <input class="form-check-input" type="checkbox" name="state" value="<%= course.name %>">
                          <label class="form-check-label" for="flexCheckDefault">
                            <%= course.name %>
                          </label>
                        </li>
                        <% }); %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="my-3">
            <input type="submit" value="Filter">
            <button type="reset" class="btn" style="background-color: #dde1d5;">Clear</button>
          </div>
        </div>
      </form>

      <div class="col-md-7">
        <% colleges.forEach(college=> { %>
          <div class="row g-2">
            <div class="col-md-12 mb-4">
              <div class="item product p-4">
                <div class="courses mb-0 item product py-4">
                  <a href="/view/<%= college._id %>">
