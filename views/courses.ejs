                        <div class="selection">
                          <p class="m-0">MBA/PGDM</p>
                        </div>
                        <div class="selection">
                          <p class="m-0">Sales & marketing management</p>
                        </div>
                      </div>
                      <button class="scroll-button right-button" onclick="scrollContainer.scrollBy(200, 0)"
                        style="flex-shrink: 0">
                        <i class="fa fa-chevron-right"></i>
                      </button>
                    </div>
                  </div>

                  <div class=" row mb-3 justify-content-between">
                    <button class="col-6 btn btn-primary btn-outline-primary py-3">Download Broucher </button>
                    <button class="col-5 btn btn-primary btn-outline-primary py-3">Apply Now</button>
                  </div>

                  <div class="row text-center gap-2 justify-content-between">
                    <button class="col-3 btn btn-primary btn-outline-primary"><i class="fa fa-book"
                        aria-hidden="true"></i> Courses &amp; Fees</button>
                    <button class="col-2 btn btn-primary btn-outline-primary"><i class="fa fa-picture-o"
                        aria-hidden="true"></i> Gallery</button>
                    <button class="col-2 btn btn-primary btn-outline-primary"><i class="fa-solid fa-phone"
                        aria-hidden="true"></i> Contact</button>
                    <button class="col-3 btn btn-primary btn-outline-primary"><i class="fa-solid fa-graduation-cap"
                        aria-hidden="true"></i> Eligibility</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>

            <!-- Pagination -->


      </div>

      <div class="col-md-2">
        <div class="rounded-1 bg-white shadow-md">
          <div class="heading d-flex justify-content-between align-items-center p-3">
            <h6 class="text-uppercase">Latest News</h6>
          </div>
          <div class="">
            <div class="d-flex justify-content-between m-2">
              <div class="form-check">
                <label class="form-check-label" for="flexCheckDefault"> Intel Core i7 </label>
              </div>
            </div>
          </div>
        </div>

        <div class="rounded-1 bg-white shadow-md">
          <div class="heading d-flex justify-content-between align-items-center p-3">
            <h6 class="text-uppercase">State</h6>
          </div>
          <div class="">
            <div class="d-flex justify-content-between m-2">
              <div class="form-check">
                <label class="form-check-label" for="flexCheckDefault"> Intel Core i7 </label>
              </div>
            </div>
          </div>
        </div>

        <div class="rounded-1 bg-white shadow-md">
          <div class="heading d-flex justify-content-between align-items-center p-3">
            <h6 class="text-uppercase">Course</h6>
          </div>
          <div class="">
            <div class="d-flex justify-content-between m-2">
              <div class="form-check">
                <label class="form-check-label" for="flexCheckDefault"> Intel Core i7 </label>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </section>
  <SCRipt>
    function myFunction() {
      var input, filter, ul, li, label, i, txtValue;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      ul = document.getElementById("myUL");
      li = ul.getElementsByTagName("li");

      for (i = 0; i < li.length; i++) {
        label = li[i].getElementsByTagName("label")[0];
        txtValue = label.textContent || label.innerText;

        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          li[i].style.display = "";
        } else {
          li[i].style.display = "none";
        }
      }
    }
    function myFunction1() {
      var input, filter, ul, li, label, i, txtValue;
      input = document.getElementById("state");
      filter = input.value.toUpperCase();
      ul = document.getElementById("std");
      li = ul.getElementsByTagName("li");

      for (i = 0; i < li.length; i++) {
        label = li[i].getElementsByTagName("label")[0];
        txtValue = label.textContent || label.innerText;

        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          li[i].style.display = "";
        } else {
          li[i].style.display = "none";
        }
      }
    }
    function myFunction2() {
      var input, filter, ul, li, label, i, txtValue;
      input = document.getElementById("course");
      filter = input.value.toUpperCase();
      ul = document.getElementById("crd");
      li = ul.getElementsByTagName("li");

      for (i = 0; i < li.length; i++) {
        label = li[i].getElementsByTagName("label")[0];
        txtValue = label.textContent || label.innerText;

        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          li[i].style.display = "";
        } else {
          li[i].style.display = "none";
        }
      }
    }
  </SCRipt>
