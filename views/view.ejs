      </div>
    </div>

    <div class="text-center py-5 p-2 p-md-5" id="courses_fees">
      <h1 class="fw-bold">Other Course Specialisation in same college</h1>
      <h5>
        Course Specialisation | <%= college.name %> [<%= college.shortName %>]-
            <%= college.city.cityName %>, <%= college.state.stateName %>
      </h5>
      <div class="table-responsive mt-4">
        <table class="table table-hover">
          <thead>
            <tr class="text-center">
              <th scope="col" class="border border-1 text-white" style="background-color: #ff8900">
                Course Name
              </th>
              <th scope="col" class="border border-1 text-white" style="background-color: #ff8900">
                Course Specialisation
              </th>
              <th scope="col" class="border border-1 text-white" style="background-color: #ff8900">
                Course Fee
              </th>
            </tr>
          </thead>
          <% courses.forEach(function(course) { %>
            <tbody class="border-1">
              <tr>
                <td class="border-0">
                  <%= course.parentCourse %>
                </td>
                <td class="border-0">
                  <%= course.subCourse %>
                </td>
                <td class="border-0">Rs <%= course.fee %>
                </td>
              </tr>
            </tbody>
            <% }); %>
        </table>
      </div>
    </div>
